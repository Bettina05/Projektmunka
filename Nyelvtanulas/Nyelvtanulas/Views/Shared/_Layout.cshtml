@using Nyelvtanulas.Models
@inject IAuthenticationService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <title>@ViewData["Title"] - Lingarix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/images/navlogo.png" alt="Lingarix logó" title="Lingarix logó" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (authService.IsAuthenticated)
                        {
                            <!-- Statisztika -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Stat" asp-action="Statistics">Statisztika</a>
                            </li>

                            <!-- Egy link/gomb lenne amivel el tudnánk indítani a konzolos felületünket-->
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white px-3 py-2 mx-2" asp-area="" asp-controller="App" asp-action="LaunchConsoleApp">Tanulás megkezdése</a>
                            </li>

                            <!-- Hasznos tippek -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Information" asp-action="Tips">Hasznos tippek</a>
                            </li>

                            <!-- Információ -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Information" asp-action="Info">Informácó</a>
                            </li>

                            <!-- Rólunk oldal -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">Rólunk</a>
                            </li>

                            <!-- Kijelentkezés -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Kijelentkezés</a>
                            </li>
                        }
                        else
                        {
                            <!-- Regisztráció -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Regisztráció</a>
                            </li>

                            <!-- Bejelentkezés -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Bejelentkezés</a>
                            </li>

                            <!-- Hasznos tippek -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Information" asp-action="Tips">Hasznos tippek</a>
                            </li>

                            <!-- Információ -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Information" asp-action="Info">Informácó</a>
                            </li>

                            <!-- Rólunk oldal -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">Rólunk</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Lingarix - Gunics Bettina Virág & Páll Márk Hunor
        </div>
    </footer>
</body>
</html>