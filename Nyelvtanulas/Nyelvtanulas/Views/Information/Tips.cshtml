@{
    ViewData["Title"] = "Tippek";
}
<h2>Bejelentkezés</h2>
<form asp-action="Login" method="post">
    <h3>Adja meg a felhaszálónevét: </h3>
    <input name="username" placeholder="Felhasználónév" required />

    <h3>Adja meg a jelszavát: </h3>
    <input name="password" type="password" placeholder="Jelszó" required />
    <br />
    <br />
    <button type="submit">Belépés</button>
<h2>Hasznos tippek a nyelvtanuláshoz</h2>
<ul>
    <li>Gyakorolj naponta legalább 15 percet!</li>
    <li>Használj nyelvtanuló alkalmazásokat!</li>
    <li>Olvass és nézz videókat az adott nyelven!</li>
</ul>
</form>
