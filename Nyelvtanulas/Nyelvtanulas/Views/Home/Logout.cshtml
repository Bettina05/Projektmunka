@{
    ViewData["Title"] = "Kijelentkezés";
}
<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/site.css">
    </head>
    <body class="bg-primary-subtle">
        <div class="container d-flex flex-column justify-content-center align-items-center vh-100 text-center">
            <div class="card shadow-lg p-4 border-0" style="max-width: 500px; width: 100%;">
                <div class="card-body">
                    <h1 class="display-5 text-primary fw-bold">Lingarix</h1>
                    <h2 class="fs-4 text-muted">Köszönjük, hogy minket választott!</h2>
                    <img src="~/images/logo.png" alt="Lingarix logó" class="img-fluid my-3" style="max-width: 200px;">
                    <p class="text-secondary">Reméljük, hamarosan újra találkozunk!</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">Vissza a főoldalra</a>
                </div>
            </div>
        </div>
    </body>
</html>