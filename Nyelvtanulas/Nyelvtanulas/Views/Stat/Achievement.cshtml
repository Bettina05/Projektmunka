@using Lingarix_Database.Entities
@model List<Achievement>

@{
    ViewData["Title"] = "Ranglista";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="bg-primary-subtle">
    <div class="container mt-4">
        <h3 class="text-center">Elért eredmények:</h3>

        <table class="table table-striped table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Felhasználónév</th>
                    <th>Eredmény</th>
                    <th>Dátum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var achievement in Model)
                {
                    <tr>
                        <td>@achievement.Username</td>
                        <td>@achievement.AchievementName</td>
                        <td>@achievement.DateEarned.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Vissza a főoldalra</a>
        </div>
    </div>
</body>
</html>