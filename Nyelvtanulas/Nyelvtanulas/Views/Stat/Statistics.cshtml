@using Lingarix_Database.Entities
@model List<UserStatistics>

@{
    ViewData["Title"] = "Statisztika";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body class=" bg-primary-subtle">
     <div class="container mt-5">
        <h2 class="text-center">Üdvözöllek!</h2>
        <h3 class="text-center">Statisztikáid:</h3>
        <aside class="col-md-3 d-none d-md-block">
            <div class="card p-3">
                <h4>További statisztikák:</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a asp-controller="Stat" asp-action="Achievement">Elért eredmények</a></li>
                    <li class="list-group-item"><a asp-controller="Stat" asp-action="Ranglist">Ranglista</a></li>
                    <li class="list-group-item"><a asp-controller="Stat" asp-action="Badges">Jelvények</a></li>
                    <li class="list-group-item"><a asp-controller="Stat" asp-action="Levels">Szintek</a></li>
                </ul>
            </div>
        </aside>
        <table class="table table-striped table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Dátum</th>
                    <th>Pontszám</th>
                    <th>Feladatok</th>
                    <th>Tanulással töltött idő (perc)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stat in Model)
                {
                    <tr>
                        <td>@stat.Date.ToShortDateString()</td>
                        <td>@stat.Score</td>
                        <td>@stat.Exercises</td>
                        <td>@Math.Round(stat.StudyTime, 2)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Vissza a főoldalra</a>
        </div>
    </div>
</body>
</html>
