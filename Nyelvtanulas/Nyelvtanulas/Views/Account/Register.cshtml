@{
    ViewData["Title"] = "Regisztráció";
}
<!-- A captcha css része -->
<style>
    /*CAPTCHA*/
    .navigacio {
        text-align: center;
        padding-top: 12px;

        border-radius: 7px;
        height: 75px;
        font-size: 1cm;
        font-weight: bolder;
    }

    #cap {
        height: 250px;
    }

    h1 {
        margin-top: 40px;
        font-family: sans-serif;
        text-transform: uppercase;
        font-size: 40px;
    }

    .container {
        margin-top: 15px;
        height: 50px;
        /*display: flex;*/
        align-items: center;
        justify-content: center;
        background: white;
        width: 300px;
        border-radius: 20px;
    }

    #captchaTxtArea {
        background-image: "cap.jpg"; 
        color: #FF4500;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        outline: none;
        border: 3px solid black;
        margin-top: 15px;
        width: 120px;
    }

    #CaptchaEnter {
        margin-top: 15px;
        width: 303px;
        height: 30px;
        border: 3px solid black;
        font-size: 27px;
    }

    #CaptchaEnter::placeholder {
        color: black;
        font-size: 24px;
        text-align: center;
    }

    #refreshbtn {
        width: 100px;
        height: 30px;
        border: 2px solid black;
        font-weight: bold;
    }

    #checkbtn {
        width: 100px;
        height: 30px;
        border: 2px solid black;
        font-weight: bold;
    }
</style>

<!-- Regisztráció és captcha -->
<h2>@ViewData["Title"]</h2>
<form asp-action="Register" method="post" id="myForm">
    <h3>Adja meg a teljes nevét: </h3>
    <input type="text" name="FullName" placeholder="Teljes név" required />

    <h3>Adja meg a felhasználónevét: </h3>
    <input type="text" name="UserName" placeholder="Felhasználónév" required />

    <h3>Adja meg az email címét: </h3>
    <input type="email" name="Email" placeholder="E-mail" required />

    <h3>Adja meg a jelszavát: </h3>
    <input type="password" name="Password" placeholder="Jelszó" required />

    <!-- CAPTCHA -->
    <h3>Adja meg a kódot a képről: </h3>
    <div class="cap">
        <h1><a name="captchaCode"> Captcha Code </a></h1>
        <div class="container">
            <form name="form1">
                <input type="text" id="captchaTxtArea" name="text" value="" />
                <br />
                <input type="text" id="CaptchaEnter" name="CaptchaInput" placeholder="Adja meg a kódot" required />
                <br />
                <input type="button" value="Frissítés" id="refreshbtn" onclick="genNewCaptcha()" />
                <input type="button" value="Ellenőrzés" id="checkbtn" onclick="checkCaptcha()" />
            </form>
        </div>
    </div>
    <button type="submit">Regisztráció</button>
</form>

<!-- Külső js -->
<!-- wwwroot/js/Captcha.js    mappában van-->
<script src="~/js/Captcha.js"></script>
