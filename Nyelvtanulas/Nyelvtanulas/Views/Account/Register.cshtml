@{
    ViewData["Title"] = "Regisztráció";
}
<!-- A captcha css része -->
<style>
    body
    {
        text-align:left;
        margin: 0;
        padding: 0;
    }

    #myForm
    {
        width: 100%;
        height: 550px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    h3
    {
        text-align: left;
        margin-left:0;
    }

    input[type="text"], 
    input[type="email"], 
    input[type="password"], 
    #CaptchaEnter 
    {
        text-align: left;
    }


    <!--CAPTCHA-->
    #cap 
    {
        height: 250px;
        text-align: left;
    }

    .container 
    {
        margin-top: 15px;
        height: 40px;
        text-align:left;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        background: white;
        width: 100%;
        border-radius: 20px;
    }

    #captchaTxtArea 
    {
        background-image: url("cap.jpg"); 
        color: #FF4500;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        outline: none;
        border: 2px solid black;
        margin-top: 5px;
        width: 150px;
        text-align:center;
    }

    #CaptchaEnter 
    {
        margin-top: 5px;
        width: 303px;
        height: 50px;
        border: 2px solid black;
        font-size: 24px;
        text-align: left;
    }

    #CaptchaEnter::placeholder 
    {
        color: black;
        font-size: 24px;
        text-align: center;
    }

    #refreshbtn,
    #checkbtn 
    {
        background-color: darkblue;
        color:white;
        width: 100px;
        height: 30px;
        border: 2px solid black;
        font-weight: bold;
        margin-top: 10px;
        display: inline-block;
    }

    button[type="submit"] 
    {
        width: 100%;
        padding: 10px;
        background-color: green;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        text-align: center;
    }
</style>

<!-- Regisztráció és captcha -->
<h1>@ViewData["Title"]</h1>
<form asp-action="Register" method="post" id="myForm">
    <h3>Adja meg a teljes nevét: </h3>
    <input type="text" name="FullName" placeholder="Teljes név" required />

    <h3>Adja meg a felhasználónevét: </h3>
    <input type="text" name="UserName" placeholder="Felhasználónév" required />

    <h3>Adja meg az email címét: </h3>
    <input type="email" name="Email" placeholder="E-mail" required />

    <h3>Adja meg a jelszavát: </h3>
    <input type="password" name="Password" placeholder="Jelszó" required />

    <hr />

    <!-- CAPTCHA -->
    <div class="cap">
        <h3> Captcha Code </h3>
        <div class="container">
            <form name="form1">
                <input type="text" id="captchaTxtArea" name="text" value=""/>
                <br/>
                <input type="text" id="CaptchaEnter" name="CaptchaInput" placeholder="Adja meg a kódot" required />
                <br/>
                <input type="button" value="Frissítés" id="refreshbtn" onclick="genNewCaptcha()" />
                <input type="button" value="Ellenőrzés" id="checkbtn" onclick="checkCaptcha()" />
            </form>
        </div>
    </div>
    <button type="submit">Regisztráció</button>
</form>

<!-- Külső js -->
<!-- wwwroot/js/Captcha.js    mappában van-->
<script src="~/js/Captcha.js"></script>