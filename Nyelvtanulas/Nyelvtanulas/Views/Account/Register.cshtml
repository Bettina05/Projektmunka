@{
    ViewData["Title"] = "Regisztráció";
}
@model User
<!-- A captcha css része -->
<style>
    body
    {
        text-align:left;
        margin: 0;
        padding: 0;
    }

    #myForm
    {
        width: 100%;
        height: 600px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    h3
    {
        text-align: left;
        margin-left:0;
    }

    input[type="text"], 
    input[type="email"], 
    input[type="password"], 
    #CaptchaEnter 
    {
        text-align: left;
    }


    <!--CAPTCHA-->
    #cap 
    {
        height: 250px;
        text-align: left;
    }

    .container 
    {
        margin-top: 15px;
        text-align:left;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        background: white;
        width: 100%;
        border-radius: 20px;
    }

    #captchaTxtArea 
    {
        background-image: url("../images/cap.jpg"); 
        color: #FF4500;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        outline: none;
        border: 2px solid black;
        margin-top: 5px;
        width: 150px;
        text-align:center;
    }

    #CaptchaEnter 
    {
        margin-top: 5px;
        width: 303px;
        height: 50px;
        border: 2px solid black;
        font-size: 24px;
        text-align: left;
    }

    #CaptchaEnter::placeholder 
    {
        color: black;
        font-size: 24px;
        text-align: center;
    }

    #refreshbtn,
    #checkbtn 
    {
        background-color: darkblue;
        color:white;
        width: 100px;
        height: 30px;
        border: 2px solid black;
        font-weight: bold;
        margin-top: 10px;
        display: inline-block;
    }

    button[type="submit"] 
    {
        width: 100%;
        padding: 10px;
        background-color: green;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        text-align: center;
    }
</style>

<!-- Regisztráció és captcha -->
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("RegisterUser", "Account"))
{
    <label>Adja meg a teljes nevét: </label>
    @Html.TextBoxFor(x => x.Fullname)
    <br />

    <label>Adja meg a felhasználónevét: </label>
    @Html.TextBoxFor(x => x.Username)
    <br />

    <label>Adja meg az email címét: </label>
    @Html.TextBoxFor(x => x.Email)
    <br />

    <label>Adja meg a jelszavát: </label>
    @Html.PasswordFor(x => x.PasswordHash)
    <br />

    <hr />

